<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <link href="~/css/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap-reboot.css" />

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand pl-2 pr-2" asp-controller="Home" asp-action="Index">Drink&Psych</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a asp-controller="Home" asp-action="Index" class="nav-link pr-2">Home <span class="sr-only">(current)</span></a>
                </li>
                @await Component.InvokeAsync("CategoryMenu")

                <li class="nav-item">
                    <a asp-controller="Contact" asp-action="Index" class="nav-link">About</a>
                </li>
                @await Component.InvokeAsync("ShoppingCartSummary")                              
            </ul>

            <form class="form-inline my-2 my-lg-0" asp-controller="Drink" asp-action="Search" method="get">
                <input class="form-control mr-sm-2" type="text" placeholder="Search for a drink" name="searchString" value="@ViewData["searchString"]" aria-label="Search">  
            </form>

            @await Html.PartialAsync("LoginPartialView")
        </div>
    </nav>

    <div class="container">
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
